<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.coolappz.Comune" version="1.0.0">
    <name>Comune</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html"/>
    <plugin name="cordova-plugin-whitelist" spec="1"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
     <platform name="android">
        <!-- qui inseriamo le icone usate per l'app sul dispositivo  e gli splashscreen, un buon sito Ã¨  -->
       
        <icon src="res/android/ic_launcher.png" density="hdpi" />
        <splash src="res/screen/android/drawable-land-hdpi/screen.png" density="land-hdpi"/>
        
        <allow-intent href="market:*"/>
    </platform>
 <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
    <preference name="SplashScreen" value="screen"/>
</widget>

        
        
   

          
   
 